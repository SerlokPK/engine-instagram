{
  "root": true,
  "env": {
    "node": true
  },
  "extends": ["plugin:vue/recommended", "eslint:recommended"],
  "rules": {
    "semi": [2, "always"],
    "linebreak-style": 0,
    "operator-linebreak": [2, "none"],
    "vue/component-tags-order": [
      "error",
      {
        "order": ["template", "script", "style"]
      }
    ]
  },
  "plugins": ["vue"]
}
